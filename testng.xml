<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Suite" parallel="tests" thread-count="3">
	<listeners>
		<listener class-name="Utilities.RetryListener" />
	</listeners>
	<parameter name="browser" value="chrome" />
	<parameter name="browser" value="firefox" />
	<parameter name="browser" value="edge" />

	<test name="CrossbrowserAndParallelTest">
		<parameter name="sheetName1" value="Arrays" />
		<parameter name="sheetName2" value="DsAlgo" />
		<parameter name="rowIndex1" value="1" />
		<classes>
			<class name="TestSuites.ArrayTest" />
		</classes>
	</test>
	<test name="RegisterTest">
		<classes>
			<class name="TestSuites.RegisterTest" />
		</classes>
	</test>
	<test name="NumpyNinjaTest">
		<classes>
			<class name="TestSuites.NumpyNinjaTest" />
		</classes>
	</test>
	<test name="LoginTest">
		<classes>
			<class name="TestSuites.LoginTest" />
		</classes>
	</test>
	<test name="PracticeQuestionsTest">
		<parameter name="sheetName1" value="PracticeQuestions" />
		<parameter name="sheetName2" value="DsAlgo" />
		<parameter name="rowIndex1" value="1" />
		<classes>
			<class name="TestSuites.PracticeQuestionsTest" />
		</classes>
	</test>
	<test name="RerunFailedTests" parallel="false">
		<classes>
			<class name="Utilities.RetryforFailedScenarios" />
		</classes>
	</test>
</suite>
